<% content_for :head do %>
  <div class="media_teaser">Here's a list of every movie I've ever seen and my rating for each. I'm now up to a total of <%= number_with_delimiter(@total_film_count, :delimiter => ',') %> films, including <%= number_with_delimiter(@films_watched_this_year, :delimiter => ',') %> from this year.</div>
<% end %>
<% content_for :table_open do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col" style="width: 25%">Film</th>
        <th scope="col" style="width: 25%">Director(s)</th>
        <th scope="col">Release Year</th>
        <th scope="col">Date Watched</th>
        <th scope="col">Rating</th>
      </tr>
    </thead>
    <tbody>
    <% end %>
    <% content_for :body do %>
      <%= render partial: "single_film", collection: @all_films %>
    <% end %>
    <% content_for :table_close do %>
    </tbody>
  </table>
<% end %>
<% content_for :sidebar do %>
  <%= render "sidebar" %>
<% end %>
