<% # Allows a new user to edit or delete their user account. %>
<% # URL for this page is: /users/edit %>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.password_field :password, label: "New Password", autocomplete: "new-password", placeholder: "Leave blank if you don't want to change it. #{pw_length_alert(@minimum_password_length)}" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, label: "Confirm New Password", autocomplete: "new-password", placeholder: "Leave blank if you don't want to change it." %>
  </div>
  <div class="field">
    <%= f.password_field :current_password, label: "Current Password", autocomplete: "current-password" %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<p><%= button_to "Delete My User Account", registration_path(resource_name), data: { confirm: "You sure?" }, method: :delete, :class => "btn btn-danger" %></p>
