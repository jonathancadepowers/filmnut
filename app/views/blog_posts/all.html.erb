<% content_for :body do %>
  <%= render partial: "single_blog_post", collection: @all_blog_posts %>
<% end %>
<% content_for :sidebar do %>
  <%= render "application/main_sidebar" %>
<% end %>
<% content_for :trailer do %>
  <div class="archive_teaser">
    <%= fa_icon "arrow-circle-right" %>
    <%= link_to "Follow me to the archives...", blog_posts_archives_path %>
  </div>
<% end %>
